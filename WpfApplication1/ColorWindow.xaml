<Window x:Class="WpfApplication1.ColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ColorWindow" Height="500" Width="720">
    <StackPanel Orientation="Horizontal">
        <Image x:Name="DepthData" Height="480" Width="640" 
               MouseLeftButtonUp="DepthData_MouseLeftButtonUp" />
        <StackPanel>
            <Image x:Name="ColorData" Height="60" Width="80" VerticalAlignment="Top"/>
            <Button x:Name="RangeButton" Click="RangeButton_Click">預設模式</Button>
        </StackPanel>  
    </StackPanel>     
</Window>
